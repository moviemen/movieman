= form_for @synonym, html: { class: 'form form-horizontal synonym' } do |f|

  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)

  .form-group
    = f.label :media_id, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :media_id, class: 'form-control', required: true
    = f.error_span(:media_id)

  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil, class: 'btn btn-primary'
      = link_to 'cancel', synonyms_path, class: 'btn btn-default'
