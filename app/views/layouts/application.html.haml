!!! 5
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %meta{'http-equiv': 'X-UA-Compatible', content: 'IE=Edge,chrome=1'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}

    %title= content_for?(:title) ? yield(:title) : 'Movieman'

    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'

    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', sizes: '144x144'
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', sizes: '114x114'
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png',   rel: 'apple-touch-icon-precomposed', type: 'image/png', sizes: '72x72'
    = favicon_link_tag 'apple-touch-icon-precomposed.png',         rel: 'apple-touch-icon-precomposed', type: 'image/png'
    = favicon_link_tag 'favicon.ico',                              rel: 'shortcut icon'

    = javascript_include_tag 'application'

  %body
    .visible-xs.visible-sm
      .page_head.navbar.navbar-default.navbar-fixed-top
        .container
          %button.navbar-toggle{type: 'button', 'data-toggle': 'collapse', 'data-target': '.navbar-responsive-collapse'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          .navbar-collapse.collapse.navbar-responsive-collapse
            %ul.nav.navbar-nav
              %li= link_to 'Movies',     '/movies'
              %li= link_to 'TV Series',  '/tv_series'
              %li= link_to 'Subscribes', '/subscribes'

    .container
      .row
        .col-md-3.col-lg-3.sidebar.hidden-xs.hidden-sm
          .sidebar-nav
            = image_tag 'logo.png', class: 'logo center-block'

        .col-md-9.col-lg-9
          = bootstrap_flash
          = yield
