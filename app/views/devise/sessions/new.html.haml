.login_from
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {role: 'form'}) do |f|

    .form-group-white
      = f.label       :email, class: 'text-white'
      = f.email_field :email, autofocus: true, class: 'form-control text-white'
    %br/

    .form-group-white
      = f.label          :password, class: 'text-white'
      = f.password_field :password, autocomplete: 'off', class: 'form-control text-white'
    %br/

    - if devise_mapping.rememberable?
      .form-group-white
        = f.label :remember_me, class: 'text-white' do
          = f.check_box :remember_me
          remember me
      %br/

    = f.submit t('.sign_in', default: 'Sign in'), class: 'btn btn-primary btn-raised'

    = link_to t('.sign_up', default: 'Sign up'), new_registration_path(resource_name), class: 'btn btn-link btn-raised'

    = link_to t('.forgot_your_password', default: 'Forgot your password?'), new_password_path(resource_name), class: 'btn btn-link btn-raised'

