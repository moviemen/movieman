.thumbnail.for_media.pull-left{id: subscription.id.to_s, page: params[:page]}

  %h5.thumbnail_header.text-white.pull-left
    = (subscription.name.size > 15 ? "#{subscription.name[0..14]}..." : subscription.name)

  .thumbnail_body
    = image_tag subscription.picture_path, alt: subscription.name, class: 'picture'
    .contenthover.center-block
      - if current_user.subscribed?(subscription.id)
        = image_tag 'subscribe.png',   class: 'subscribe hidden', media_id: subscription.id.to_s
        = image_tag 'unsubscribe.png', class: 'unsubscribe',      media_id: subscription.id.to_s
      - else
        = image_tag 'subscribe.png',   class: 'subscribe',          media_id: subscription.id.to_s
        = image_tag 'unsubscribe.png', class: 'unsubscribe hidden', media_id: subscription.id.to_s

  %h6.thumbnail_footer.text-white
    %span.pull-right
      - if subscription.movie?
        = subscription.sources.last.released ? 'Released' : 'Soon'                        
      - else
        = "s #{subscription.sources.last.season} e #{subscription.sources.last.episode}"