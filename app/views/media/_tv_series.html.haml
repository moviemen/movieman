.thumbnail.for_media.pull-left{id: tv_series.id.to_s}

  %h5.thumbnail_header.text-white.pull-left
    = (tv_series.name.size > 15 ? "#{tv_series.name[0..14]}..." : tv_series.name)

  .thumbnail_body
    = image_tag tv_series.picture_path, alt: tv_series.name, class: 'picture'
    .contenthover
      - if current_user.subscribed?(tv_series.id)
        %p SUBSCRIBE
        %p
          %span.glyphicon.glyphicon-ok-circle.hidden.subscribe
          %span.glyphicon.glyphicon-remove-circle.unsubscribe
      - else
        %p SUBSCRIBE
        %p
          %span.glyphicon.glyphicon-ok-circle.subscribe
          %span.glyphicon.glyphicon-remove-circle.hidden.unsubscribe

  %h6.thumbnail_footer.text-white
    %span.pull-right= "s #{tv_series.sources.last.season} e #{tv_series.sources.last.episode}"
