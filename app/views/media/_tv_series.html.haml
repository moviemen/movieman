.thumbnail.for_media.pull-left{id: tv_series.id.to_s, page: params[:page]}

  %h5.thumbnail_header.text-white.pull-left
    = (tv_series.name.size > 15 ? "#{tv_series.name[0..14]}..." : tv_series.name)

  .thumbnail_body
    = image_tag tv_series.picture_path, alt: tv_series.name, class: 'picture'
    .contenthover.center-block
      - if current_user.subscribed?(tv_series.id)
        = image_tag 'subscribe.png',   class: 'subscribe hidden', media_id: tv_series.id.to_s
        = image_tag 'unsubscribe.png', class: 'unsubscribe',      media_id: tv_series.id.to_s
      - else
        = image_tag 'subscribe.png',   class: 'subscribe',          media_id: tv_series.id.to_s
        = image_tag 'unsubscribe.png', class: 'unsubscribe hidden', media_id: tv_series.id.to_s

  %h6.thumbnail_footer.text-white
    %span.pull-right= "s #{tv_series.sources.last.season} e #{tv_series.sources.last.episode}"
