= form_tag("/search", method: "get", id: 'search_form', class: 'form-inline search-form hidden-xs hidden-sm') do
  .form-group-white.pull-right
    = text_field_tag 'search', nil, placeholder: '   type a search phrase, baby', class: 'form-control white-text input-lg'
    %span.glyphicon.glyphicon-search.link-white

.row.media_container
  .medias.col-xs-10.col-sm-10.col-md-10.col-lg-11

    .tab-content.center-block
      #movies_tab.tab-pane.active
      #tv_series_tab.tab-pane
      #subscriptions_tab.tab-pane

  .menu.col-xs-2.col-sm-2.col-md-2.col-lg-1

    %ul.nav.nav-tabs.tabs-right
      %li.menu_item.active
        %a{'data-toggle': 'tab', href: '#movies_tab', 'data-type': 'movies'}
          =image_tag 'movies.png',     class: 'tab_icon_small'
      %li.menu_item
        %a{'data-toggle': 'tab', href: '#tv_series_tab', 'data-type': 'tv_series'}
          =image_tag 'tv_series.png',  class: 'tab_icon'
      %li.menu_item
        %a{'data-toggle': 'tab', href: '#subscriptions_tab', 'data-type': 'subscriptions'}
          =image_tag 'subscriptions.png', class: 'tab_icon'
