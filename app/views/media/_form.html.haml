= form_for @media, html: {class: 'form form-horizontal media'} do |f|

  .form-group
    = f.label :type, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :type, class: 'form-control', required: true
    = f.error_span(:type)

  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)

  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil, class: 'btn btn-primary'
      = link_to 'cancel', media_index_path, class: 'btn btn-default'
