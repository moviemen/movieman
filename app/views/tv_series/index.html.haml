%form.form-inline.search-form
  .form-group-white.pull-right
    %input.form-control.white-text{placeholder: 'Search', type: 'text'}
    %span.glyphicon.glyphicon-search.link-white

.tv_series
  .row
    .col-md-10.col-lg-10.medias

      .tab-content

        #movies-r.tab-pane.active
          - @tv_series.shuffle.each do |tv_series|
            .thumbnail.for_media.pull-left
              %p.tv_series_name
                %small.text-white.pull-left= (tv_series.name.size > 15 ? "#{tv_series.name[0..15]}..." : tv_series.name)
              = link_to tv_series.sources.last.link, class: 'text-primary' do
                = image_tag "tv_series/#{tv_series.picture}", alt: tv_series.name, class: 'tv_series_picture'
              %p
                %small.text-white.pull-right s.#{tv_series.sources.last.season} e.#{tv_series.sources.last.episode}

        #tv_series-r.tab-pane
          - @tv_series.shuffle.each do |tv_series|
            .thumbnail.for_media.pull-left
              %p.tv_series_name
                %small.text-white.pull-left= (tv_series.name.size > 15 ? "#{tv_series.name[0..15]}..." : tv_series.name)
              = link_to tv_series.sources.last.link, class: 'text-primary' do
                = image_tag "tv_series/#{tv_series.picture}", alt: tv_series.name, class: 'tv_series_picture'
              %p
                %small.text-white.pull-right s.#{tv_series.sources.last.season} e.#{tv_series.sources.last.episode}

        #subscribes-r.tab-pane
          - @tv_series.shuffle.each do |tv_series|
            .thumbnail.for_media.pull-left
              %p.tv_series_name
                %small.text-white.pull-left= (tv_series.name.size > 15 ? "#{tv_series.name[0..15]}..." : tv_series.name)
              = link_to tv_series.sources.last.link, class: 'text-primary' do
                = image_tag "tv_series/#{tv_series.picture}", alt: tv_series.name, class: 'tv_series_picture'
              %p
                %small.text-white.pull-right s.#{tv_series.sources.last.season} e.#{tv_series.sources.last.episode}

    .col-md-2.col-lg-2.hidden-xs.hidden-sm.menu

      %ul.nav.nav-tabs.tabs-right
        %li.menu_item.active
          %a{'data-toggle': 'tab', href: '#movies-r'}
            =image_tag 'movies.png',     class: 'tab_icon_small'
        %li.menu_item
          %a{'data-toggle': 'tab', href: '#tv_series-r'}
            =image_tag 'tv_series.png',  class: 'tab_icon'
        %li.menu_item
          %a{'data-toggle': 'tab', href: '#subscribes-r'}
            =image_tag 'subscribes.png', class: 'tab_icon'
